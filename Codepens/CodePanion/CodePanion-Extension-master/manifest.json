{
  "name": "CodePanion",

  "version": "0.1",

  "description": "Github integration into CodePens",

  "permissions": [
    "http://codepen.io/"
  ],

  "browser_action": {
    "default_title": "CodePanion",
    "default_icon": "assets/images/icon.png"
  },

  "background": {
    "scripts": [""]
  },

  "manifest_version": 2,

  "externally_connectable": {
    "matches": ["https://oauth.io/"]
  },

  "web_accessible_resource": [
    "codepanion.html"
  ]
}
